<body>

    <%- include('partials/header') %>

<!-- Hero Section -->
<div class="hero" style="font-family: 'Nothing You Could Do', cursive; font-weight: 500; font-style: normal; font-size: 60px;">
  Customize Your Dream Trip
</div>

<!-- Hero Description -->
<div class="hero-description" style="padding: 20px; text-align: center;">
  <h2>‚ú® Why Customize Your Trip? ‚ú®</h2>
  <p>
    Everyone has a unique travel style! Whether you love <strong>adventure</strong>, <strong>relaxation</strong>, or <strong>luxury</strong>, 
    we help create the <strong>perfect itinerary</strong> just for you. Answer a few quick questions and get 
    <strong>tailored recommendations</strong> for your dream vacation. üåç‚ú®
  </p>
</div>

<!-- Trip Quiz Intro -->
<div class="trip" style="text-align: center; margin-top: 40px;">
  <h1>üéØ Take Our Fun Travel Quiz to find your dream trip!</h1>
</div>

<!-- Quiz Section -->
<div class="quiz-container" style="max-width: 800px; margin: auto; padding: 20px;">
  <h2>Fun Travel Quiz</h2>
  <form id="quizForm">
    <% const quizSteps = [
      ["1Ô∏è‚É£ Do you prefer Adventure or Relaxation?", "adventure", "relaxation"],
      ["2Ô∏è‚É£ Mountain or Beach?", "mountain", "beach"],
      ["3Ô∏è‚É£ Do you prefer Solo Travel or Group Travel?", "solo", "group"],
      ["4Ô∏è‚É£ What's your favorite climate?", "cold", "warm"],
      ["5Ô∏è‚É£ Do you like Cultural Experiences or Thrill Activities?", "culture", "thrill"]
    ]; %>

    <% quizSteps.forEach((step, i) => { %>
      <div class="quiz-step <%= i === 0 ? 'active' : '' %>">
        <p><%= step[0] %></p>
        <button type="button" class="option" data-value="<%= step[1] %>"><%= step[1].charAt(0).toUpperCase() + step[1].slice(1) %></button>
        <button type="button" class="option" data-value="<%= step[2] %>"><%= step[2].charAt(0).toUpperCase() + step[2].slice(1) %></button>
      </div>
    <% }); %>

    <div class="quiz-step">
      <h4>üéâ You're Done! üéâ</h4>
      <p>Click the button below to reveal your dream trip destination!</p>
      <button type="button" class="result-btn">Check Your Dream Trip</button>
    </div>
  </form>
</div>

<!-- Booking Form -->
<div class="trip" style="text-align: center; margin-top: 50px;">
  <h1>üåç If you already know your dream destination, book now! ‚úàÔ∏è</h1>
  <p>Fill out the form below to plan your perfect trip with ease.</p>
</div>

<div class="booking-form" style="max-width: 800px; margin: auto; padding: 20px;">
  <h2>Want To Go For A Memorable Holiday?</h2>
  <form id="bookingForm">
    <div class="form-group">
      <label>Destination</label>
      <input type="text" placeholder="Package Name / Destination Name">
    </div>

    <div class="form-row">
      <div class="form-group">
        <label>Date of Departure</label>
        <input type="date">
      </div>
      <div class="form-group">
        <label>City of Departure</label>
        <input type="text" placeholder="City of Departure">
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <label>Name</label>
        <input type="text" placeholder="Your Name">
      </div>
      <div class="form-group">
        <label>Phone Number</label>
        <input type="text" placeholder="Mobile No.">
      </div>
    </div>

    <div class="form-group">
      <label>Email ID</label>
      <input type="email" placeholder="Your E-mail Address">
    </div>

    <div class="form-row">
      <div class="form-group">
        <label>Budget Preference</label>
        <select>
          <option>Luxury</option>
          <option>Mid-Range</option>
          <option>Budget-Friendly</option>
        </select>
      </div>
      <div class="form-group">
        <label>Travel Duration</label>
        <select>
          <option>Weekend (2-3 Days)</option>
          <option>Short Trip (4-6 Days)</option>
          <option>Long Vacation (7+ Days)</option>
        </select>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <label>Accommodation Type</label>
        <select>
          <option>Hotel</option>
          <option>Resort</option>
          <option>Camping</option>
          <option>Homestay</option>
        </select>
      </div>

      <div class="form-group">
        <label>Preferred Activities</label>
        <select>
          <option>Hiking & Trekking</option>
          <option>Beach Relaxation</option>
          <option>Cultural Tours</option>
          <option>Adventure Sports</option>
        </select>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <label>Food Preferences</label>
        <select>
          <option>Vegetarian</option>
          <option>Non-Vegetarian</option>
          <option>Vegan</option>
          <option>No Preference</option>
        </select>
      </div>
    </div>

    <div class="passenger-count">
      <% const passengerTypes = ['Adult', 'Child', 'Infant']; %>
      <% passengerTypes.forEach(type => { %>
        <div class="passenger">
          <label><%= type %></label>
          <button type="button">-</button>
          <span><%= type === 'Adult' ? 2 : 0 %></span>
          <button type="button">+</button>
        </div>
      <% }); %>
    </div>

    <button type="submit" class="enquire-btn">Enquire Now</button>
  </form>
</div>

<script>
  const quizSteps = document.querySelectorAll(".quiz-step");
  const options = document.querySelectorAll(".option");
  let stepIndex = 0;

  options.forEach(option => {
    option.addEventListener("click", () => {
      quizSteps[stepIndex].classList.remove("active");
      stepIndex++;
      if (stepIndex < quizSteps.length) {
        quizSteps[stepIndex].classList.add("active");
      }
    });
  });

  document.addEventListener("DOMContentLoaded", function () {
    const passengerControls = document.querySelectorAll(".passenger");

    passengerControls.forEach(passenger => {
      const minusBtn = passenger.querySelector("button:nth-child(2)");
      const plusBtn = passenger.querySelector("button:nth-child(4)");
      const countSpan = passenger.querySelector("span");

      let count = parseInt(countSpan.innerText);

      minusBtn.addEventListener("click", function () {
        if (count > 0) {
          count--;
          countSpan.innerText = count;
        }
      });

      plusBtn.addEventListener("click", function () {
        count++;
        countSpan.innerText = count;
      });
    });
  });
</script>
